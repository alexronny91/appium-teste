{
  "name": "desafio-automacao-mobile",
  "version": "1.0.0",
  "description": "Projeto de automação de testes mobile com WebdriverIO + Appium 3",
  "main": "index.js",
  "scripts": {
    "test:android": "wdio run wdio.android.conf.js",
    "test:ios": "wdio run wdio.ios.conf.js",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "allure:clean": "rimraf ./allure-results/*"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "mobile-testing",
    "qa",
    "automation"
  ],
  "author": "Alex Rufino",
  "license": "MIT",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/appium-service": "^8.37.0",
    "@wdio/cli": "^8.37.0",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^8.37.0",
    "allure-commandline": "^2.27.0",
    "appium": "^3.0.1",
    "appium-inspector-plugin": "^2025.8.2",
    "appium-uiautomator2-driver": "^5.0.0",
    "appium-xcuitest-driver": "^10.1.0",
    "chai": "^4.3.10",
    "mocha": "^10.4.0",
    "webdriverio": "^8.37.0"
  }
}
